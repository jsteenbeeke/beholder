<?xml version="1.0"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>beholder-web</display-name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>com.jeroensteenbeeke.topiroll.beholder.BeholderApplicationConfig</param-value>
    </context-param>
    <context-param>
        <param-name>contextClass</param-name>
        <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </context-param>
    <filter>
        <filter-name>wicket.BeholderApplication</filter-name>
        <filter-class>org.apache.wicket.protocol.ws.javax.JavaxWebSocketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>com.jeroensteenbeeke.topiroll.beholder.BeholderApplication</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>oeiv</filter-name>
        <filter-class>org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter</filter-class>
    </filter>

    <filter>
        <filter-name>rollbar</filter-name>
        <filter-class>com.jeroensteenbeeke.hyperion.rollbar.RollBarFilter</filter-class>
    </filter>

	<filter>
		<filter-name>doorbell</filter-name>
		<filter-class>com.jeroensteenbeeke.topiroll.beholder.web.DoorbellFilter</filter-class>
	</filter>

    <filter-mapping>
        <filter-name>oeiv</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

	<filter-mapping>
		<filter-name>rollbar</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<filter-mapping>
		<filter-name>wicket.BeholderApplication</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>doorbell</filter-name>
		<url-pattern>/doorbell</url-pattern>
	</filter-mapping>


	<listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>
</web-app>
